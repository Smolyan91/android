<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.igor.controlstate.MainActivity">

    <com.github.anastr.speedviewlib.SpeedView
        android:id="@+id/gauge"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginStart="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:sv_highSpeedColor="#F44336"
        app:sv_indicatorColor="#3F51B5"
        app:sv_lowSpeedColor="#8BC34A"
        app:sv_maxSpeed="16"
        app:sv_mediumSpeedColor="#FFEB3B"
        app:sv_speedTextFormat="FLOAT"
        app:sv_unit="G"
        app:sv_unitUnderSpeedText="false"
        app:sv_withTremble="false"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
</android.support.constraint.ConstraintLayout>
